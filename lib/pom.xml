          <dependencies>
              <dependency>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${cn1lib.name}-javascript</artifactId>
                  <version>${project.version}</version>
              </dependency>
          </dependencies>
      </profile>
      <profile>
          <id>ios</id>
          <activation>
              <property>
                  <name>codename1.platform</name>
