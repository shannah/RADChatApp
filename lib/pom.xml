              </property>
          </activation>
          <dependencies>
              <dependency>
                  <groupId>${project.groupId}</groupId>
                  <artifactId>${cn1lib.name}-android</artifactId>
                  <version>${project.version}</version>
              </dependency>
          </dependencies>
